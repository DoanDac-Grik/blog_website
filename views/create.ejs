<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->
        <header class="masthead container px-4 px-lg-5" >      
            <h1>Tạo bài viết mới</h1>      
        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class='container px-4 px-lg-5 '>
              <!-- Attribute enctype báo cho trình duyệt form có chưa multimeadia -->
                <form method="POST" action="/modify/create/new-post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="" >Title</label>
                      <input type="text" class="form-control" name="title" id="title" placeholder="Title">
                    </div>
                    <div class="form-group">
                      <label for="">Author</label>
                      <input type="text" class="form-control" id="author" name="author" placeholder="Người viết bài">
                    </div>
                    <div class="form-group">
                        <label for="">Tóm tắt</label>
                        <input type="text" class="form-control" id="summary" name="summary" placeholder="Tóm tắt bài viết">
                    </div>
                    <div class="form-group">
                        <label for="">Nội dung</label>
                        <textarea name="body" class="form-control" id="body" rows="10"></textarea>
                    </div>
                    <div class="form-group mt-4">
                      <label for="">Chọn ảnh</label>
                      <input type="file" class="formcontrol" id="image" name="image">
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Tạo bài viết</button>
                  </form>
            </div>
        </main>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        </footer>
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
       
    </body>
</html>
