<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->
        <header class="masthead" >
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Add Moderator</h1>
                            <span class="subheading">Only for Admin </span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <main class="mb-4 container d-flex justify-content-center">
          <form class ="col-5" action="/auth/createUser" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Username </label>
              <input type="text" class="form-control" id="" name ="username" placeholder="username" >
            </div>
            <div class="form-group">
              <label for="">Password</label>
              <input type="password" class="form-control" id="" name="password" placeholder="Password">
            </div>
            <div class="form-group form-check mt-4">
              <input type="radio" class="form-check-input" name="role" value="admin"  >        
              <label class="form-check-label" for="exampleCheck1">Admin</label>
            </div>
            <div class="form-group form-check mt-4">
              <input type="radio" class="form-check-input" name="role" value="moderator"  >
              
              <label class="form-check-label" for="exampleCheck1">Moderator</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </main>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        </footer>
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
       
    </body>
</html>
