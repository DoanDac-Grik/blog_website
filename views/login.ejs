<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->
        <header class="masthead" >
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Login page</h1>
                            <span class="subheading">Only for Admin and Moderator</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <main class="mb-4 container d-flex justify-content-center">
          <form class ="col-5" action="/auth/userlogin" method="POST">
            <div class="form-group">
              <label for="">Username</label>
              <input type="text" class="form-control" id="" name="username" placeholder="Nhập username">
              
            </div>
            <div class="form-group">
              <label for="">Password</label>
              <input type="password" class="form-control" id="" placeholder="Nhập password" name="password">
            </div>
            
            <button type="submit" class="btn btn-primary mt-4">Đăng nhập</button>
          </form>
        </main>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        </footer>
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
       
    </body>
</html>
